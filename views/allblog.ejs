<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!-- Blog Delete Css -->
    <style>
        /*style.css*/
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Lato";
            line-height: 1.5;
            min-height: 100vh;
            background: #f3f3f3;
            flex-direction: column;
            margin: 0;
        }

        .main {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            padding: 10px 20px;
            transition: transform 0.2s;
            width: 1000px;
            height: 100%;
            text-align: center;
        }

        h1 {
            margin: 0px;
            color: #4CAF50;
        }

        label {
            display: block;
            width: 100%;
            margin-top: 10px;
            margin-bottom: 5px;
            text-align: left;
            color: #555;
            font-weight: bold;
        }


        input {
            display: block;
            width: 100%;
            margin-bottom: 15px;
            padding: 10px;
            box-sizing: border-box;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        button {
            padding: 5px;
            border-radius: 10px;
            /* margin-top: 15px;
            margin-bottom: 15px; */
            border: none;
            color: white;
            cursor: pointer;
            background-color: #4CAF50;
            /* width: 100%; */
            font-size: 8px;
        }

        .edit-btn {
            padding: 5px;
            border-radius: 10px;
            /* margin-top: 15px;
            margin-bottom: 15px; */
            border: none;
            color: black;
            cursor: pointer;
            background-color: yellow;
            /* width: 100%; */
            font-size: 8px;
        }

        .wrap {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        ul {
            list-style: none;
        }

        /* .title {
            font-weight: 600;
            font-family: Arial, Helvetica, sans-serif;
            margin-left: 5px;
            text-transform: capitalize;
        } */

        /* .blog {
            display: flex;
            justify-content: center;
        } */

        .blogs {
            margin-top: 10px;
        }
    </style>

    <!-- Side Navbar Css -->
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

        .sidenav a {
            padding: 8px 8px 8px 8px;
            text-decoration: none;
            font-size: 20px;
            color: #818181;
            display: block;
            transition: 0.3s;
        }

        .sidenav a:hover {
            color: #4CAF50;
        }

        .sidenav .closebtn {
            position: absolute;
            top: 0;
            right: 25px;
            font-size: 20px;
            margin-left: 50px;
        }

        @media screen and (max-height: 450px) {
            .sidenav {
                padding-top: 15px;
            }

            .sidenav a {
                font-size: 18px;
            }
        }
    </style>

    <!-- Card -->
    <style>
        .container-fluid {
            /* position: absolute;
            left: 50%;
            top: 50%;
            transform: translateY(-50%) translateX(-50%);
            width: 100%; */

        }

        @media (max-width: 530px) {
            .container-fluid {
                left: 0;
                margin: 10px 0;
                position: relative;
                top: 0;
                transform: none;
            }
        }

        .blog-card {
            background-color: white;
            border-radius: 1px;
            box-shadow: 0 0 2px -1px rgba(0, 0, 0, 0.75);
            max-height: 100%;
            margin: 0 auto;
            max-width: 800px;
            overflow-y: scroll;
            scrollbar-width: none;
            box-shadow: #4CAF50 0px 3px 8px;
            margin: 0px 10px 10px 0px;
        }



        @media (max-width: 580px) {
            .blog-card {
                height: 350px;
                overflow: visible;
            }
        }

        .media {
            background-position: center;
            background-size: cover;
            height: 100%;
        }

        .card-body {
            color: #7A7A7A;
            height: 100%;
            padding: 5px 20px 5px;
        }

        @media (max-width: 530px) {
            .card-body {
                background-color: white;
            }
        }

        .tagline {
            font-size: 20px;
            text-transform: capitalize;
        }

        .title {
            color: #252830;
            font-family: "Playfair Display SC";
            font-size: 30px;
            font-weight: 400;
        }

        .divider {
            background: #7A7A7A;
            height: 2px;
            margin: 25px auto;
            width: 40px;
        }

        .paragraph {
            font-weight: 300;
            text-align: start;
        }

        .read-more {
            bottom: 25px;
            color: #7A7A7A;
            cursor: pointer;
            left: 50%;
            padding: 5px;
            position: absolute;
            text-decoration: none;
            top: auto;
            transform: translateX(-50%);
        }

        .read-more:hover,
        .read-more:focus,
        .read-more:visited {
            color: #252830;
            text-decoration: none;
        }

        @media (max-width: 530px) {
            .col-xs-6 {
                width: 100%;
            }
        }
    </style>

</head>

<body>
    <div>
        <!-- <div style="display: flex; justify-content: center;"> -->
        <div class="main">
            <div id="mySidenav" class="sidenav">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <a href="/signup">SignUp</a>
                <a href="/blog/getblog">Add Blog</a>
                <a href="/profile" class="right">Profile</a>
                <a href="/logout" class="right">Logout</a>
            </div>
            <span style="font-size:10px; float: left;cursor:pointer " onclick="openNav()">&#9776;</span>
            <h1>My Blog</h1>
            <div class="blog">
                <div class="blogs">
                    <ul
                        style="display: flex; flex-wrap: wrap-reverse; justify-content: center; width: 100%; padding-inline-start: 0px;">
                        <% for(let i=0; i < blogs.length; i++) { %>
                            <div class="container-fluid">
                                <div class="blog-card">
                                    <li data-id="<%= blogs[i]._id %>">
                                        <div class="card-body col-sm-6 col-xs-6">
                                            <div class="tagline text-center" style=" display: flex; ">
                                                <label style="text-align: start; ">
                                                    <%= blogs[i].title %>
                                                </label>
                                                <label style="text-align: end;font-size: 15px; ">
                                                    <%= new Date(blogs[i].createdAt).toLocaleDateString() %>
                                                </label>
                                            </div>
                                            <div class="paragraph text-justify">
                                                <%= blogs[i].desc %>
                                            </div>
                                        </div>
                                    </li>
                                </div>
                            </div>
                            <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <!-- Blog Delete Script -->

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const deleteButtons = document.querySelectorAll('.del-btn');

            deleteButtons.forEach(button => {
                button.addEventListener('click', function (event) {
                    event.preventDefault(); // Prevent default form submission

                    const listItem = button.closest('li');
                    const taskId = listItem.getAttribute('data-id');
                    const form = button.closest('form');

                    form.action = `/blog/${titleId}/delete`;

                    form.submit();
                });
            });
        });
    </script>

    <!-- Side Navbar Script -->

    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }
    </script>

</body>

</html>
</body>

</html>